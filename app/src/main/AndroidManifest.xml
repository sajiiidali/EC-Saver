<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myECapplication.sajiiidali.ecsaver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ec_saver_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ec_saver_app_logo"
        android:supportsRtl="true"
        android:theme="@style/myAppTheme"
        android:fullBackupContent="true"
        android:allowBackup="true">
        <activity
            android:name=".kotlin.KotlinMainActivity" android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".kotlin.fcm.FirebaseMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1241237715193709~8967418014" />

        <activity android:name="com.google.android.gms.ads.AdActivity" />
    </application>

</manifest>