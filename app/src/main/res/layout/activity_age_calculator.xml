<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgeCalculator">

    <TextView
        android:id="@+id/birthday_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/birthday_date"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#5dcec2"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/second_layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/birthday_date"
        android:padding="8dp"
        android:background="@drawable/border_colour"
        android:orientation="horizontal">
     <AutoCompleteTextView
         android:id="@+id/edt_day"
         android:layout_width="80dp"
         android:layout_height="30dp"
         android:hint="Day"
         android:textAlignment="center"
         android:inputType="number"
         android:digits="1234567890"
         android:background="@drawable/edit_text_border" />
        <AutoCompleteTextView
            android:id="@+id/edt_month"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:hint="Month"
            android:textAlignment="center"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edit_text_border" />
        <AutoCompleteTextView
            android:id="@+id/edt_year"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:hint="Year"
            android:textAlignment="center"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <TextView
        android:id="@+id/too_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/to_date"
        android:layout_below="@+id/second_layout_wrapper"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#5dcec2"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/third_layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/too_date"
        android:padding="8dp"
        android:background="@drawable/border_colour"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtto_day"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:hint="Day"
            android:textAlignment="center"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edit_text_border" />
        <EditText
            android:id="@+id/edtto_month"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:hint="Month"
            android:textAlignment="center"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edit_text_border" />
        <EditText
            android:id="@+id/edtto_year"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:hint="Year"
            android:textAlignment="center"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <TextView
        android:id="@+id/date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/third_layout_wrapper"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/current_date_designe"
        android:onClick="set_current_date"/>
    <LinearLayout
        android:id="@+id/button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_header"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:textStyle="bold"
            android:text="Calculate"
            android:layout_marginRight="1dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:text="Clear"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
    </LinearLayout>

        <TextView
            android:id="@+id/age_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_wrapper"
            android:layout_marginTop="3dp"
            android:text="@string/result"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="#5dcec2" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/age_header"
            android:background="@drawable/border_colour">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/text_years" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_years"
                android:id="@+id/text_month"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_toRightOf="@id/text_month"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/text_days"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-1241237715193709/5970430028">
    </com.google.android.gms.ads.AdView>




</RelativeLayout>